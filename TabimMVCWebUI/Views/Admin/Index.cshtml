@model IEnumerable<TabimMVCWebUI.Entity.UserOperation>

@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <h2>Değerlendirilmiş Talep Listesi</h2>
                <hr />
                <button class="btn btn-secondary" type="button" name="print" aria-label="Print" title="Print">
                <i class="fa fa-print"></i> 
                </button>
                @Html.ActionLink("PDF Rapor", "PrintAllDemand", null, new { @class = "btn btn-primary " })
                <hr />
            </div>

            <table class="table table-bordered table-striped " data-  id="tblList">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NameSurname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Documantation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsApproved)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UploadTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ManagerDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ManagerUploadTime)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameSurname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a href="~/Image/@item.Documantation">
                                <img src="~/Image/documents.png" width="100" height="60" />
                            </a>
                        </td>
                        <td>
                            @if (item.IsApproved == true)
                            {
                                <label class="badge badge-success">
                                    <i class="fas fa-check-circle"></i>
                                    Olumlu
                                </label>
                            }
                            @if (item.IsApproved == false)
                            {
                                <label class="badge badge-danger">
                                    <i class="fas fa-times"></i>
                                    Olumsuz
                                </label>
                            }
                            @if (item.IsApproved == null)
                            {
                                <label class="badge badge-warning">
                                    <i class="fas fa-question"></i>
                                    Okunmadı
                                </label>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UploadTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ManagerDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ManagerUploadTime)
                        </td>

                        <td>
                            @Html.ActionLink("Değerlendir", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                            @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<script src="extensions/print/bootstrap-table-print.js"></script>



