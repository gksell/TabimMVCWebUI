@model TabimMVCWebUI.Entity.UserOperation

@{
    ViewBag.Title = "Details";
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}


<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Talep Detayları #@Model.Id</h2>

            <div>
                
                <dl class="dl-horizantal">
                    
                    <dt>
                        @Html.DisplayNameFor(model => model.UserEmail)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.UserEmail)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.NameSurname)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NameSurname)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Documantation)
                    </dt>

                    <dd>
                        <a href="~/Image/@Model.Documantation">
                            <img src="~/Image/documents.png" width="100" height="100" />
                        </a>
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.IsApproved)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.IsApproved)
                    </dd>
                    
                </dl>
                
            </div>
            <p>
                @Html.ActionLink("Değerlendir", "Edit", new { id = Model.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Listeye Geri Dön", "ListAdmin", null, new { @class = "btn btn-warning" })
            </p>
        </div>
    </div>
</div>

